#include <stdio.h>
#include <string.h>

int guest_finder(char guests[][100], int size, const char *target) {
    int low = 0;
    int high = size - 1;
    while (low <= high) {
        int mid = (high + low) / 2;
        if (strcmp(guests[mid], target) == 0) {
            return mid;
        } else if (strcmp(guests[mid], target) > 0) {
            high = mid - 1;
        } else {
            low = mid + 1;
        }
    }
    return -1;
}

int main() {
    char guests[][100] = {"Apurba", "Birendra", "Chinmay", "Das", "Elis", "Fazil", "Ghanima", "Happy", "Indra", "Jamal"};
    int size = sizeof(guests) / sizeof(guests[0]);
    char target[100];
    printf("Enter the guest name to search: ");
    scanf("%99s", target);
    printf("Verifying guest name %s...\n", target);
    
    int index = guest_finder(guests, size, target);
    if (index != -1) {
        printf("Guest name %s found at index %d.\n", target, index);
    } else {
        printf("Guest name %s not found.\n", target);
    }
    return 0;
}
